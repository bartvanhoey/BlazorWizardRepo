@page "/"
@using BlazorWizard.Components
@using BlazorWizard.Components.Wizard


<Wizard OnWizardFinished="WizardFinished" Id="DemoWizard" 
        ShowNextButton="ShowNextButton" CssNextButton="btn btn-secondary" CssPreviousButton="btn btn-danger" ShowSteps="true" ShowTitle="false">
    <WizardStep Title="User Entry">
        <UserEntry OnUserInfoEntered="UserInfoEntered" />
    </WizardStep>
    <WizardStep Title="Credentials">
        <CredentialsEntry OnCredentialsEntered="CredentialsEntered" /> 
    </WizardStep>
    <WizardStep Title="Address">
        <AddressEntry OnAddressInfoEntered="AddressInfoEntered"/>
    </WizardStep>
    <WizardStep Title="Final Step" ShowSubmitButton="true"  >
        <div class="row">
            <p>The final step has been reached. Thank you \o/</p>
        </div>
    </WizardStep>
</Wizard>


